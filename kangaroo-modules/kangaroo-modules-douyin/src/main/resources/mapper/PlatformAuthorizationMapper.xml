<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ink.kangaroo.douyin.mapper.PlatformAuthorizationMapper">

	<resultMap type="ink.kangaroo.douyin.domain.PlatformAuthorization" id="PlatformAuthorizationResult">
		<id     property="authId"     column="auth_id"     />
		<result property="openId"   column="open_id"   />
		<result property="authName"   column="auth_name"   />
		<result property="authType"   column="auth_type"   />
		<result property="accessToken"   column="access_token"   />
		<result property="refreshToken"   column="refresh_token"   />
		<result property="expiresIn"     column="expires_in"      />
		<result property="refreshExpiresIn"     column="refresh_expires_in"      />
		<result property="scope"     column="scope"      />
		<result property="status"     column="status"      />
		<result property="isExpired"     column="is_expired"      />
		<result property="createBy"   column="create_by"   />
		<result property="createTime" column="create_time" />
		<result property="updateBy"   column="update_by"   />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="selectPlatformAuthorizationVo">
        select auth_id, open_id, auth_name, auth_type, access_token, refresh_token, expires_in, refresh_expires_in, scope, status , create_by, create_time, update_by, update_time
		from platform_authorization
    </sql>

	<select id="selectPlatformAuthorizationList" parameterType="ink.kangaroo.douyin.domain.PlatformAuthorization" resultMap="PlatformAuthorizationResult">
	    <include refid="selectPlatformAuthorizationVo"/>
		<where>
		    <if test="authName != null and dictName != ''">
				AND dict_name like concat('%', #{dictName}, '%')
			</if>
			<if test="status != null and status != ''">
				AND status = #{status}
			</if>
			<if test="authType != null and authType != ''">
				AND dict_type like concat('%', #{dictType}, '%')
			</if>
			<if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
				and date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
			</if>
			<if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
				and date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
			</if>
	    </where>
	</select>

	<select id="selectPlatformAuthorizationAll" resultMap="PlatformAuthorizationResult">
		<include refid="selectPlatformAuthorizationVo"/>
	</select>

	<select id="selectPlatformAuthorizationById" parameterType="Long" resultMap="PlatformAuthorizationResult">
		<include refid="selectPlatformAuthorizationVo"/>
		where dict_id = #{dictId}
	</select>

	<select id="selectPlatformAuthorizationByType" parameterType="String" resultMap="PlatformAuthorizationResult">
		<include refid="selectPlatformAuthorizationVo"/>
		where dict_type = #{dictType}
	</select>

	<select id="checkPlatformAuthorizationUnique" parameterType="String" resultMap="PlatformAuthorizationResult">
		<include refid="selectPlatformAuthorizationVo"/>
		where dict_type = #{dictType} limit 1
	</select>

	<delete id="deletePlatformAuthorizationById" parameterType="Long">
 		delete from platform_authorization where dict_id = #{dictId}
 	</delete>

 	<delete id="deletePlatformAuthorizationByIds" parameterType="Long">
 		delete from platform_authorization where dict_id in
 		<foreach collection="array" item="dictId" open="(" separator="," close=")">
 			#{dictId}
        </foreach>
 	</delete>

 	<update id="updatePlatformAuthorization" parameterType="ink.kangaroo.douyin.domain.PlatformAuthorization">
 		update platform_authorization
 		<set>
 			<if test="dictName != null and dictName != ''">dict_name = #{dictName},</if>
 			<if test="dictType != null and dictType != ''">dict_type = #{dictType},</if>
 			<if test="status != null">status = #{status},</if>
 			<if test="remark != null">remark = #{remark},</if>
 			<if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
 			update_time = sysdate()
 		</set>
 		where dict_id = #{dictId}
	</update>

 	<insert id="insertPlatformAuthorization" parameterType="ink.kangaroo.douyin.domain.PlatformAuthorization">
 		insert into platform_authorization(
 			<if test="authName != null and dictName != ''">dict_name,</if>
 			<if test="authType != null and dictType != ''">dict_type,</if>
 			<if test="status != null">status,</if>
 			<if test="remark != null and remark != ''">remark,</if>
 			<if test="createBy != null and createBy != ''">create_by,</if>
 			create_time
 		)values(
 			<if test="authName != null and dictName != ''">#{dictName},</if>
 			<if test="authType != null and dictType != ''">#{dictType},</if>
 			<if test="status != null">#{status},</if>
 			<if test="remark != null and remark != ''">#{remark},</if>
 			<if test="createBy != null and createBy != ''">#{createBy},</if>
 			sysdate()
 		)
	</insert>

</mapper> 